<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>

        <variable
            name="vm"
            type="com.example.root.gitsecommerce.Detail.ViewModel.DetailActivityVM"/>

        <variable
            name="observable"
            type="com.example.root.gitsecommerce.Detail.ObservableDetail"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.root.gitsecommerce.Main.MainActivity">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/holo_blue_dark"
                android:title="Gits Commerce"
                android:titleTextColor="#fff"
                android:padding="15dp"
                app:layout_scrollFlags="scroll|enterAlways" >

                <ImageButton
                    android:background="@android:color/transparent"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_back_white_24dp"
                    android:onClick="@{vm.onClickListener}"/>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@{vm.observableDetail.nama}"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#fff"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <RelativeLayout
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/activity_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout">

                <ImageView
                    android:scaleType="centerCrop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/darker_gray"
                    app:setBG="@{vm.url}"/>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@={vm.observableDetail.nama}"
                        android:id="@+id/textView6"
                        android:textColor="#f88f27"
                        android:layout_alignParentTop="true"
                        />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ratingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="#f99539"
                        android:layout_below="@+id/textView6"
                        android:progressBackgroundTint="#f99539"
                        android:rating="@{vm.observableDetail.rating}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.observableDetail.pricedisc}"
                        android:id="@+id/textView7"
                        android:layout_above="@+id/textView8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.observableDetail.price}"
                        android:id="@+id/textView8"
                        android:layout_above="@+id/textView9"
                        android:textSize="12dp"
                        android:visibility='@{!vm.observableDetail.discount.equalsIgnoreCase("0") ? View.VISIBLE : View.GONE}'
                        app:setStrikeThrough="@{vm.observableDetail.discount}"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{vm.observableDetail.stok}"
                        android:id="@+id/textView9"
                        android:textColor="#2a7ff5"
                        android:layout_gravity="bottom"
                        android:layout_alignParentBottom="true"
                        android:textSize="12dp"/>

                </RelativeLayout>


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{vm.observableDetail.discount}"
                    android:id="@+id/textView5"
                    android:textColor="#3684fa"
                    android:textSize="12dp"
                    android:paddingRight="10dp"
                    android:gravity="right" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/layout_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  DESCRIPTION"
                    android:id="@+id/btn_desc"
                    android:background="#f5aa14"
                    android:textColor="@android:color/background_light"
                    android:gravity="left|center_vertical"
                    android:onClick="@{(v) -> vm.onCollapsing(v)}"
                    android:drawableRight="@{vm.isGoneDesc?@drawable/ic_keyboard_arrow_down_white_24dp:@drawable/ic_keyboard_arrow_up_white_24dp}"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_desc"
                    android:layout_below="@+id/btn_desc"
                    android:layout_alignRight="@+id/btn_desc"
                    android:layout_alignEnd="@+id/btn_desc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:text="@{vm.observableDetail.desc}"
                    app:setCollapsing="@{vm.isGoneDesc  != null ? vm.isGoneDesc : false}"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_spec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_desc"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="@{vm.observableDetail.spec == null?View.GONE:View.VISIBLE}"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  SPECIFICATION"
                    android:id="@+id/btn_spec"
                    android:background="#f5aa14"
                    android:textColor="@android:color/background_light"
                    android:gravity="left|center_vertical"
                    android:onClick="@{(v) -> vm.onCollapsing(v)}"
                    android:drawableRight="@{vm.isGoneSpec?@drawable/ic_keyboard_arrow_down_white_24dp:@drawable/ic_keyboard_arrow_up_white_24dp}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_spec"
                    android:layout_below="@+id/btn_spec"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentLeft="true"
                    android:text="@{vm.observableDetail.spec}"
                    app:setCollapsing="@{vm.isGoneSpec  != null ? vm.isGoneSpec : false}" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_spec"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="@{vm.observableDetail.size == null?View.GONE:View.VISIBLE}"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  SIZE"
                    android:id="@+id/btn_size"
                    android:background="#f5aa14"
                    android:textColor="@android:color/background_light"
                    android:gravity="left|center_vertical"
                    android:onClick="@{(v) -> vm.onCollapsing(v)}"
                    android:drawableRight="@{vm.isGoneSize?@drawable/ic_keyboard_arrow_down_white_24dp:@drawable/ic_keyboard_arrow_up_white_24dp}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_size"
                    android:layout_below="@+id/btn_size"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentLeft="true"
                    android:text="@{vm.observableDetail.size}"
                    app:setCollapsing="@{vm.isGoneSize != null ? vm.isGoneSize : false}"/>
            </RelativeLayout>


        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>
