<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.example.root.gitsecommerce.Main.ViewModel.MainActivityVM"/>
    </data>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.example.root.gitsecommerce.Main.MainActivity">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:background="#3F51B5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_below="@id/app_bar"
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Button
                    android:layout_marginRight="0.5dp"
                    android:textColor="#fff"
                    android:background="#424242"
                    android:textAlignment="center"
                    android:text="Sort"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{()->vm.onClickShort()}"
                    android:id="@+id/button2" />

                <Button
                    android:layout_marginLeft="0.5dp"
                    android:textColor="#fff"
                    android:background="#424242"
                    android:text="Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="@{()->vm.onClickFilter()}"
                    android:id="@+id/button" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="@{vm.gridLayoutManager}"
            app:adapter="@{vm.bAdapter}">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
</layout>
